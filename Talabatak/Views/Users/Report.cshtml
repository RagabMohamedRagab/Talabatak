    </td>
    <td>
        <p dir="auto">
            @{ var CreatedOnd = TimeZoneInfo.ConvertTimeFromUtc(item.CreatedOn, TimeZoneInfo.FindSystemTimeZoneById("Sudan Standard Time")); }
